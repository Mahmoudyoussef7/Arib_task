@using Arib_task.DTOs
@model EmployeeDTO

@{
    ViewData["Title"] = "Delete Employee";
}

<h2>Delete Employee</h2>

<p>Are you sure you want to delete the employee <strong>@Model.FullName</strong>?</p>

<form asp-action="DeleteConfirmedAsync" asp-route-id="@Model.Id" method="post">
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
